<div class="mx-auto max-w-4xl">
  <% if @update_check&.update_available? %>
    <div class="mb-6 p-4 bg-blue-900/30 border border-blue-700 rounded-lg">
      <div class="flex items-center justify-between">
        <div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
            </svg>
            <span class="font-semibold text-blue-300">Update Available</span>
          </div>
          <p class="text-sm text-blue-400 mt-1">
            Version <code class="bg-blue-900/50 px-1 rounded"><%= @update_check.latest_version %></code> is available
            (you have <code class="bg-blue-900/50 px-1 rounded"><%= @update_check.current_version %></code>)
          </p>
          <% if @update_check.latest_message.present? %>
            <p class="text-xs text-blue-500 mt-1"><%= @update_check.latest_message.truncate(80) %></p>
          <% end %>
        </div>
        <div class="flex gap-2">
          <% if @update_check.compare_url.present? %>
            <%= link_to "View Changes", @update_check.compare_url, target: "_blank", class: "px-3 py-1 text-sm bg-gray-800 border border-blue-600 text-blue-400 rounded hover:bg-gray-700" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="flex items-center justify-between mb-8">
    <h1 class="font-bold text-4xl">Admin Dashboard</h1>
    <div class="flex items-center gap-2 text-sm text-gray-500">
      <% if @update_check %>
        <span>v<%= @update_check.current_version %></span>
      <% end %>
      <%= button_to "Check for Updates", admin_check_updates_path, method: :post, class: "px-3 py-1 text-xs bg-gray-700 hover:bg-gray-600 text-gray-300 rounded" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <div class="bg-gray-800 rounded-lg shadow p-6 border border-gray-700">
      <div class="text-gray-400 text-sm font-medium">Total Users</div>
      <div class="text-3xl font-bold text-blue-400"><%= @total_users %></div>
    </div>

    <div class="bg-gray-800 rounded-lg shadow p-6 border border-gray-700">
      <div class="text-gray-400 text-sm font-medium">Total Books</div>
      <div class="text-3xl font-bold text-green-400"><%= @total_books %></div>
    </div>

    <div class="bg-gray-800 rounded-lg shadow p-6 border border-gray-700">
      <div class="text-gray-400 text-sm font-medium">Pending Requests</div>
      <div class="text-3xl font-bold text-purple-400"><%= @pending_requests %></div>
    </div>

    <div class="bg-gray-800 rounded-lg shadow p-6 border border-gray-700">
      <div class="text-gray-400 text-sm font-medium">Needs Attention</div>
      <div class="text-3xl font-bold <%= @attention_needed > 0 ? 'text-red-400' : 'text-gray-500' %>"><%= @attention_needed %></div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="bg-gray-800 rounded-lg shadow p-6 border border-gray-700">
      <h2 class="font-bold text-xl mb-4">System Health</h2>
      <% SystemHealth::SERVICES.each do |service| %>
        <% health = @system_health[service] %>
        <div class="flex items-center justify-between py-3 border-b border-gray-700 last:border-b-0">
          <div>
            <span class="font-medium"><%= service.titleize %></span>
            <% if health&.last_check_at %>
              <span class="text-xs text-gray-500 block">
                Checked <%= time_ago_in_words(health.last_check_at) %> ago
              </span>
            <% end %>
          </div>
          <div class="text-right">
            <% if health %>
              <span class="px-2 py-1 rounded text-sm <%=
                case health.status
                when 'healthy' then 'bg-green-900/50 text-green-400'
                when 'degraded' then 'bg-yellow-900/50 text-yellow-400'
                when 'down' then 'bg-red-900/50 text-red-400'
                end
              %>">
                <%= health.status.titleize %>
              </span>
              <% if health.message.present? %>
                <span class="text-xs text-gray-500 block mt-1"><%= health.message.truncate(40) %></span>
              <% end %>
            <% else %>
              <span class="px-2 py-1 rounded text-sm bg-gray-700 text-gray-400">Not checked</span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="bg-gray-800 rounded-lg shadow p-6 border border-gray-700">
      <h2 class="font-bold text-xl mb-4">Quick Links</h2>
      <div class="space-y-2">
        <%= link_to admin_issues_path, class: "flex items-center justify-between px-4 py-2 rounded bg-gray-700 hover:bg-gray-600 text-gray-300" do %>
          <span>Issues</span>
          <% if @issues_count > 0 %>
            <span class="px-2 py-0.5 text-xs font-medium rounded-full bg-red-500 text-white"><%= @issues_count %></span>
          <% end %>
        <% end %>
        <%= link_to "Manage Users", admin_users_path, class: "block px-4 py-2 rounded bg-gray-700 hover:bg-gray-600 text-gray-300" %>
        <%= link_to "Download Clients", admin_download_clients_path, class: "block px-4 py-2 rounded bg-gray-700 hover:bg-gray-600 text-gray-300" %>
        <%= link_to "Manual Uploads", admin_uploads_path, class: "block px-4 py-2 rounded bg-gray-700 hover:bg-gray-600 text-gray-300" %>
        <%= link_to "Settings", admin_settings_path, class: "block px-4 py-2 rounded bg-gray-700 hover:bg-gray-600 text-gray-300" %>
        <%= link_to "Activity Log", admin_activity_logs_path, class: "block px-4 py-2 rounded bg-gray-700 hover:bg-gray-600 text-gray-300" %>
        <%= link_to "Back to Dashboard", root_path, class: "block px-4 py-2 rounded bg-gray-700 hover:bg-gray-600 text-gray-300" %>
      </div>
    </div>
  </div>
</div>
